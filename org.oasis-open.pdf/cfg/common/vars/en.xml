<?xml version="1.0" encoding="UTF-8"?>
<vars xmlns="http://www.idiominc.com/opentopic/vars">
    
    <!-- ===================== CHANGE LOG ================================ -->
    <!--                                                                   -->
    <!-- 05 Sep 2015 KJE: Added change log and "Work product track"        -->
    <!--                  variable.                                        -->
    <!-- 07 Sep 2015  BT: Added override for variable "Table of Contents   -->
    <!--                  Appendix"                                        -->
    <!-- 18 Sep 2015 KJE: Removed stock images for notes                   -->
    <!-- 01 Feb 2016 KJE: Implemented OASIS redesign for committee note:   -->
    <!--                  removed header variables; changed logo;          -->
    <!--                  added string for cover page heaser               -->
    <!-- 08 May 2019 KJE: Added strings for committee note and spec        -->
    <!--                  footer use                                                 -->
    <!--                                                                   -->
    <!-- ================================================================= -->
   
    <!-- Cover page logo-->
    <variable id="logo Image Path">Customization/OpenTopic/common/artwork/OASISLogo-v2.0.jpg</variable>
    
    <!-- Cover page header string for committee note -->
    <variable id="OASIS committee note">OASIS Committee Note</variable>
    
    <!-- Footer text -->
    <variable id="Committee note track">Non-Standards Track</variable>
    <variable id="Standards track">Standards Track Work Product</variable>
    
    <!-- String used for TOC -->
    <variable id="Table of Contents">Table of contents</variable>
    
    <!-- String used for generated cross reference -->
    <variable id="On the page"> (<param ref-name="pagenum"/>)</variable>
    
    <!-- Bullets for unordered lists -->
    <variable id="Unordered List bullet">•</variable>    
    <variable id="Unordered List bullet 2">–</variable>
    
    <!-- NOTE IMAGES -->
    
    <!-- The first word in the value of @id indicates the note type. -->
    <!-- To use an image, add the following content to the variable  -->
    <!-- element: Customization/OpenTopic/common/artwork/<file-name> -->
    <variable id="attention Note Image Path"></variable>
    <variable id="caution Note Image Path"></variable>
    <variable id="danger Note Image Path"></variable>
    <variable id="fastpath Note Image Path"></variable>
    <variable id="important Note Image Path"></variable>
    <variable id="note Note Image Path"></variable>
    <variable id="notice Note Image Path"></variable>
    <variable id="other Note Image Path"></variable>
    <variable id="remember Note Image Path"></variable>
    <variable id="restriction Note Image Path"></variable>
    <variable id="tip Note Image Path"></variable>   
    <variable id="trouble Note Image Path"></variable>
    <variable id="warning Note Image Path"></variable>  
    
    <!-- The string used to label an appendix within the table of contents. -->
    <!-- Removed insertion of appendix letter via the number param. The number is now 
         embedded in the title. See the code in oasis-cn-numbering.xsl. Thomas, 07sep15-->
    <variable id="Table of Contents Appendix">Appendix </variable>

</vars>